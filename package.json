{
  "name": "solar",
  "version": "0.0.1",
  "author": "sena@soompay.net",
  "description": "A wallet for CRP",
  "main": "main.js",
  "scripts": {
    "prod": "webpack --mode production --config webpack.build.config.js && electron --noDevServer .",
    "dev": "webpack --mode development --config webpack.config.js --display-error-details && electron --noDevServer .",
    "build": "webpack --config webpack.config.js --mode production",
    "package": "npm run build && electron-packager ./ --out=./builds --platform=all",
    "build:osx": "build --mac",
    "build:linux": "npm run build:linux32 && npm run build:linux64",
    "build:linux32": "build --linux --ia32",
    "build:linux64": "build --linux --x64",
    "build:win": "npm run build:win32 && npm run build:win64",
    "build:win32": "build --win --ia32",
    "build:win64": "build --win --x64"
  },
  "keywords": [
    "CRP",
    "wallet",
    "contract",
    "app"
  ],
  "build": {
    "productName": "solar",
    "appId": "com.electron.solar",
    "asar": true,
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./public/icon.png"
    },
    "dmg": {
      "title": "Solar",
      "icon": "./public/icon.png"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./public/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ],
      "icon": "./public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "resources/installer/",
      "output": "dist/",
      "app": "."
    }
  },
  "license": "CC0-1.0",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.3.1",
    "@material-ui/core": "^3.9.2",
    "babel-loader": "^8.0.5",
    "babel-plugin-react-css-modules": "^5.0.1",
    "babel-polyfill": "^6.26.0",
    "copy-webpack-plugin": "^5.0.2",
    "css-loader": "^2.1.0",
    "electron": "^4.0.4",
    "electron-builder": "^20.40.2",
    "electron-packager": "^13.1.1",
    "electron-renderer": "^2.0.4",
    "electron-webpack": "^2.6.2",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.5.0",
    "prop-types": "^15.7.2",
    "react-bootstrap": "^1.0.0-beta.5",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "@babel/core": "^7.2.2",
    "@material-ui/icons": "^3.0.2",
    "@material-ui/lab": "^3.0.0-alpha.30",
    "@trodi/electron-splashscreen": "^0.3.4",
    "acorn": "^6.1.0",
    "axios": "^0.21.1",
    "bootstrap": "^4.0.0",
    "bootstrap-daterangepicker": "^3.0.3",
    "chart.js": "^2.8.0",
    "electron-json-storage": "^4.1.6",
    "electron-log": "^3.0.1",
    "moment": "^2.24.0",
    "moment-range": "^4.0.2",
    "qrcode.react": "^0.9.3",
    "rc-slider": "^8.6.6",
    "react": "^16.8.1",
    "react-bootstrap-datetimerangepicker": "^2.0.4",
    "react-bootstrap-table-next": "^2.1.2",
    "react-bootstrap-table2-paginator": "^2.0.2",
    "react-bootstrap-table2-toolkit": "^1.3.1",
    "react-chartjs-2": "^2.7.4",
    "react-date-range": "^1.0.0-beta",
    "react-datetime": "^2.16.3",
    "react-dom": "^16.8.1",
    "react-identicons": "^1.1.7",
    "react-redux": "^6.0.1",
    "react-responsive-carousel": "^3.1.47",
    "react-router-dom": "^4.3.1",
    "react-sticky": "^6.0.3",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  }
}
